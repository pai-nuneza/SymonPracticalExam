@{
    ViewData["Title"] = "ProjectsForm Page";
}

<div class="text-center">
    <h1 class="display-4">Projects Form</h1>
</div>

<!-- Project Form -->
<div class="projectForm formBlock">
    <form>
        <div class="form-group">
            <label>Project Title</label>
            <input type="text" class="form-control" id="projectTitle" placeholder="Enter Project Title">
        </div>
        <div class="form-group">
            <label>Project Description</label>
            <textarea class="form-control rounded-0" id="projectDescription" placeholder="Enter Project Description" rows="10"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>
